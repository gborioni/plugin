<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.acestream_manager"
       name="Acestream Manager"
       version="1.0.0"
       provider-name="TuoNome">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Manage and play Acestream links</summary>
        <description lang="en">Allows saving, modifying, deleting, and playing Acestream links with Horus</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>